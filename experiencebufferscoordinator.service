[Unit]
Description=ExperienceBuffers Coordinator Service
After=default.target

[Service]
User=root
Type=Simple
ExecStart=/usr/local/bin/EBCoordinator
WorkingDirectory=/root/ExperienceBuffers
Restart=always
RestartSec=5
StandardOutput=append:/root/ExperienceBuffers/logs/activity.log
StandardError=inherit

[Install]
WantedBy=default.target

